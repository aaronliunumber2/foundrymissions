@model FoundryMissionsCom.Models.FoundryMissionViewModels.ViewMissionDataViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="@Url.Content("~/content/images/favicon.ico")" />
    @Styles.Render("~/Content/viewdata")
    @if (string.IsNullOrWhiteSpace(ViewBag.Title))
    {
        <title>@Model.Name - View Mission Details - Star Trek Online Foundry Mission Database</title>
    }
    @Scripts.Render("~/bundles/modernizr")
    <meta property="og:site_name" content="foundrymissions.com" />

    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-76643373-1', 'auto');
      ga('send', 'pageview');
    </script>
</head>
<body>
    <h2>@Model.Name Mission Details</h2>
    <div class="row">
        <div class="col-md-2" id="tabColumn">
            <div class="tabbable tabs-left">
                <ul class="nav nav-tabs">
                    <li class="active notDialogButton"><a data-toggle="tab" href="#project">Project</a></li>
                    <li class="notDialogButton"><a data-toggle="tab" href="#story">Story</a></li>
                    <li class="notDialogButton"><a data-toggle="tab" href="#maps">Maps</a></li>
                    <li id="dialogsTabButton"><a data-toggle="tab" href="#dialogs">Dialogs</a></li>
                    <li class="notDialogButton" id="costumesTabButton"><a data-toggle="tab" href="#costumes">Costumes</a></li>
                </ul>
            </div>
        </div>
        <div class="col-md-10">
            <div class="tab-content content">
                <div id="project" class="tab-pane active">
                    <h4>@Model.Name</h4>
                </div>
                <div id="story" class="tab-pane">

                </div>
                <div id="maps" class="tab-pane">

                </div>
                <div id="dialogs" class="tab-pane">To view a dialog click on the dialog on the menu bar.</div>
                <div id="costumes" class="tab-pane">
                </div>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/viewdata")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>
